<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false" >
        <shape android:shape="rectangle" >
            <corners
                android:radius="33dp" />
            <solid
                android:color="#8F8F8F" />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp" />
            <size
                android:width="270dp"
                android:height="60dp" />
            <stroke
                android:width="1dp"
                android:color="#81A6DE" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle" >
            <corners
                android:radius="33dp" />
            <solid
                android:color="#DBDFFF" />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp" />
            <size
                android:width="270dp"
                android:height="60dp" />
            <stroke
                android:width="1dp"
                android:color="#81A6DE" />
        </shape>
    </item>
</selector>